<import src="../../common/head.wxml" />
<import src="../../common/foot.wxml" />

<view class="container">
  <view class="page-body">
    <view class="ec-header">
      <view class='row'>
        <text>商品名称</text>
        <input class="ec-input" value="{{model.goodsName}}" focus="{{focusGoods}}" placeholder="请输入商品名称" confirm-type="next" bindfocus='bindGoodsFocus' bindinput="bindGoodsInput" bindblur="bindGoodsBlur" bindconfirm="bindGoodsConfirm" />
      </view>
      <view class='row'>
        <text>数量</text>
        <input class="ec-input" value="{{model.quantity}}" focus="{{focusQuantity}}" type="number" bindinput="bindQuantityInput" />
      </view>
      <view class='row'>
        <text>成本价格</text>
        <input class="ec-input" value="{{model.inUnitPrice}}" focus="{{focusQuantity}}" type="digit" bindinput="bindInUnitPriceInput" />
      </view>
      <view class='row'>
        <text>卖出价格</text>
        <input class="ec-input" value="{{model.outUnitPrice}}" focus="{{focusQuantity}}" type="digit" bindinput="bindOutUnitPriceInput" />
      </view>
      <view class='row'>
        <text>人民币</text>
        <switch bindchange="changeCurrency" checked="{{model.isRMB}}" />
      </view>
    </view>
    <view class="ec-body">
      <scroll-view style="height:{{scrollHeight}}px" scroll-top="{{scrollTop}}" scroll-y="true" bindscroll="scrll" bindscrolltolower="loadMore">
        <radio-group class="radio-group" bindchange="radioChange">
          <view class='radio-row' wx:for="{{items}}" wx:for-item="group" wx:key="unique">
            <label class="radio-cell" wx:for="{{group.radios}}" wx:key="unique">
              <radio value="{{item.name}}" checked="{{item.checked}}" />{{item.value}}
            </label>
          </view>
        </radio-group>
      </scroll-view>
    </view>
    <view class="ec-footer">
      <view class='ec-button-list'>
        <button type="primary" hover-class="button-hover" bindtap="newCustomer">新客户</button>
        <button type="primary" hover-class="button-hover" bindtap="addGoods">继续添加</button>
      </view>
    </view>
  </view>
  <component-search-view on-focus="{{searchObj.onFocus}}" search-value="{{model.goodsName}}" url="{{searchObj.url}}" position="{{searchObj.position}}" bind:finditemevent="onFindItemEvent" bind:confirmitemevent="onConfirmItemEvent"></component-search-view>
</view>