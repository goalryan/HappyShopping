.main {
  position: relative;
  width: 100%;
  height: 138rpx;
}

.main-container, .main-oper {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  border-bottom: 1px solid #eeeeee;
}

.main-container {
  display: flex;
  padding: 20rpx 20rpx 20rpx 0;
  z-index: 2;
  background: white;
  transition: left 0.2s ease-in-out;
}

.main-arrow {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 68rpx;
}

.main-content {
  display: flex;
  width: 100%;
  flex-direction: column;
  justify-content: center;
  align-items: flex-start;
}

.main-header{
  width: 100%;
  display: flex;  
  flex-direction: row;
}

.main-header .title{
  flex: 2;
  font-size: 32rpx;
  color: black;
  font-weight: 600;
}

.main-header .profit{
  flex: 1;
  font-size: 32rpx;
  color: black;
  font-weight: 600;
}

.main-desc {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  font-size: 28rpx;
  color: #999;
  margin-top: 4rpx;
}

.main-desc .item {
  flex: 1;
  justify-content: flex-start;
  color: red;
}

.main-oper {
  display: flex;
  justify-content: flex-end;
}

.add-goods {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 120rpx;
  border-left: 1px solid #eeeeee;
}

.icon-roundaddlight {
  padding-left: 10rpx;
  font-size: 56rpx;
}

.oper-edit {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 150rpx;
  z-index: 1;
  color: white;
  background: blue;
}

.oper-delete {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 150rpx;
  z-index: 1;
  color: white;
  background: red;
}
