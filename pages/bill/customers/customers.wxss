.icon-right:before {
  transition: transform 0.3s;
  transform: rotate(0deg);
  -ms-transform: rotate(0deg);
  -webkit-transform: rotate(0deg);
}

.icon-right.opened:before {
  margin-left: 0rpx;
  transform: rotate(90deg);
  -ms-transform: rotate(90deg);
  -webkit-transform: rotate(90deg);
}

.customer-wrapper {
  width: 100%;
  overflow: hidden;
}

