/* pages/bill/bills/bills.wxss */

.item-wrapper {
  width: 100%;
  overflow: hidden;
}

.item-list {
  position: relative;
  width: 100%;
  height: 138rpx;
  /* margin-left: 20rpx; */
}

/* .item-list:first-child {
  border-top: 0px solid #ccc;
} */

.item-info, .item-oper {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  border-bottom: 1px solid #eeeeee;
}

.item-info {
  display: flex;
  padding: 20rpx 20rpx 20rpx 0;
  z-index: 2;
  background: white;
  transition: left 0.2s ease-in-out;
}

.item-oper {
  display: flex;
  justify-content: flex-end;
}

.oper-edit {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 150rpx;
  z-index: 1;
  color: white;
  background: blue;
}

.oper-delete {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 150rpx;
  z-index: 1;
  color: white;
  background: red;
}

.info-img {
  width: 100rpx;
  height: 100rpx;
}

.info-wrapper {
  margin-left: 40rpx;
  width: 100%;
}

.info-desc {
  flex: 1;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  margin-top: 6rpx;
}

.info-header {
  flex: 2;
  display: flex;
  flex-direction: row;
}

.info-profit {
  flex: 1;
}

.info-header .name {
  font-size: 32rpx;
  color: black;
  font-weight: 600;
}

.info-header .rate {
  margin-left: 20rpx;
  margin-top: 10rpx;
  font-size: 24rpx;
  color: #999;
}

.info-content {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  font-size: 28rpx;
  color: #999;
  margin-top: 4rpx;
}

.info-content .item {
  flex: 1;
  justify-content: flex-start;
}
