.icon-right:before {
  transition: transform 0.3s;
}

.icon-right.opened:before {
  margin-left: 10rpx;
  transform: rotate(90deg);
  -ms-transform: rotate(90deg);
  -webkit-transform: rotate(90deg);
}

.item-wrapper {
  width: 100%;
  overflow: hidden;
}

.main {
  /*   display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  border-bottom: 1px solid #ccc; */
  position: relative;
  width: 100%;
  height: 138rpx;
}

.main:first-child {
  border-top: 0px solid #ccc;
}

.main-container, .main-oper {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  border-bottom: 1px solid #ccc;
}

.main-container {
  display: flex;
  padding: 20rpx 20rpx 20rpx 0;
  z-index: 2;
  background: white;
  transition: left 0.2s ease-in-out;
}

.main-arrow {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 64rpx;
}

.main-content {
  display: flex;
  width: 100%;
  flex-direction: column;
  justify-content: center;
  align-items: flex-start;
}

.main-title {
  font-size: 32rpx;
  color: black;
  font-weight: 600;
}

.main-desc {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  font-size: 28rpx;
  color: #999;
  margin-top: 4rpx;
}

.main-desc .item {
  flex: 1;
  justify-content: flex-start;
  color: red;
}

.main-oper {
  display: flex;
  justify-content: flex-end;
}

.oper-edit {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 150rpx;
  z-index: 1;
  color: white;
  background: blue;
}

.oper-delete {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 150rpx;
  z-index: 1;
  color: white;
  background: red;
}
