<import src="../../common/head.wxml" />
<import src="../../common/foot.wxml" />

<view class="container">
  <view class="page-body" hidden='!autoLogining'>
    <view class="ec-header">
      <view class='row'>
        <text>用户名</text>
        <input class="ec-input" value='{{model.userName}}' focus="{{focusUserName}}" placeholder="请输入用户名" confirm-type="next" bindinput="bindUserNameInput" bindconfirm="bindUserNameConfirm" />
      </view>
      <view class='row'>
        <text>密码</text>
        <input class="ec-input" password='true' value='{{model.password}}' focus="{{focusPassword}}" placeholder="请输入密码" confirm-type="next" bindinput="bindPasswordInput" />
      </view>
      <view class='row'>
        <text>绑定微信号</text>
        <switch bindchange="bindWx" checked="{{isBindWx}}" />
      </view>
    </view>
    <view class="ec-body">
      <view class='ec-button-list'>
        <button type="primary" hover-class="button-hover" bindtap="login">登录</button>
      </view>
    </view>
  </view>

  <view class="page-body" hidden='autoLogining'>
    正在加载，请稍候...
  </view>
</view>